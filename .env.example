
# Oanda API Configuration
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice
# Use 'practice' for demo account or 'live' for real account

# Alternative Data Sources
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
BINANCE_API_KEY=your_binance_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here

# Trading Configuration
CURRENCY_PAIR=EUR_USD
TIMEFRAME=H1
DATA_FETCH_INTERVAL=300
MAX_CANDLES=500

# Proximity Filter Configuration
MAX_PIPS_DISTANCE=15.0
# Maximum distance in pips between entry price and current price to show signal

# Multi-Timeframe Confirmation
MTF_CONFIRMATION_ENABLED=true
# Comma-separated list of higher timeframes to use for confirmation
MTF_HIGHER_TIMEFRAMES=H4,D1

# Session Filtering
SESSION_FILTERING_ENABLED=true
# Active sessions: tokyo,london,newyork,sydney
ACTIVE_SESSIONS=london,newyork,tokyo

# Risk Management
DEFAULT_RISK_PERCENT=1.0
MAX_RISK_PERCENT=5.0
MIN_RISK_PERCENT=0.1
# Position sizing mode: 'risk_percent' or 'fixed_lot'
POSITION_SIZING_MODE=risk_percent
FIXED_LOT_SIZE=0.01

# Signal Filtering
MIN_SIGNAL_STRENGTH=0.6
MAX_SIGNALS_PER_PAIR_PER_DAY=3

# Technical Analysis Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
SMA_FAST=50
SMA_SLOW=200
ATR_PERIOD=14
ATR_MULTIPLIER=2.0
ATR_MIN_THRESHOLD=0.5

# Volume and Volatility
OBV_PERIOD=20
VWAP_PERIOD=20

# Economic Calendar Integration
ECONOMIC_CALENDAR_ENABLED=false
ECONOMIC_CALENDAR_API_KEY=your_economic_calendar_api_key
HIGH_IMPACT_NEWS_BUFFER_MINUTES=30

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Discord Integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email Notifications
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENTS=recipient1@email.com,recipient2@email.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your_secure_api_key_here
CACHE_DURATION=5

# Database
DATABASE_URL=sqlite:///trading_signals.db
# For PostgreSQL: postgresql://username:password@localhost/trading_signals

# Performance Tracking
PERFORMANCE_TRACKING_ENABLED=true
BACKTEST_ENABLED=true

# Logging
LOG_LEVEL=INFO
